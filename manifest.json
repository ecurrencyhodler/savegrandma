{
  "manifest_version": 3,
  "name": "SaveGrandma - Email Security",
  "version": "2.0.0",
  "description": "Protect yourself from phishing emails. Built with your privacy in mind.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://inbox.google.com/*"
  ],
  "action": {
    "default_popup": "dist/popup.html",
    "default_title": "SaveGrandma - Email Protection",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "dist/service-worker.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*", "https://inbox.google.com/*"],
      "js": ["dist/content-script.bundle.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://mail.google.com/*", "https://inbox.google.com/*"]
    }
  ]
}
